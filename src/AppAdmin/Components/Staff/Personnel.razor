    private async Task BindClaimTypes(int userId)
    {
        var result = await Context.UserClaims
            .Where(x => x.UserId == userId && x.ClaimType == "role" && x.ClaimValue!.Length < 4)
            .ToListAsync();

        Claims = result.ToList();
    }

