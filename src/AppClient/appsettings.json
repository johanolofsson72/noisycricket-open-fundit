{
    "DetailedErrors": true,
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "System": "Warning",
            "Microsoft": "Warning",
            "Microsoft.EntityFrameworkCore": "Warning"
        }
    },
    "DemoMode": true,
    "HelpMode": true,
    "AllowedHosts": "*",
    "AppConfig": {
        "LocalBaseUrl": "https://localhost:5001",
        "PublicBaseUrl": "https://blazor.web-templates.io"
    },
    "ConnectionStrings": {
        "DefaultConnection": "Server=YOUR_SERVER;Database=YOUR_DB;User Id=YOUR_USER;Password=YOUR_PASSWORD;TrustServerCertificate=True;"
    },
    "GeneratedMovieTitles": "<your_path>/random_movie_titles.json",
    "DocumentTempFolder": "<your_path>/Temp",
    "DocumentPhysicalRoot": "<your_path>/Documents",
    "HangfireUserName": "<your_username>",
    "HangfirePassword": "<your_password>",
    "API_BASE_ADDRESS": "https://localhost:7051",
    "EmailConfiguration": {
        "From": "<your_email>",
        "SmtpServer": "<your_smtp_server>",
        "Port": 465,
        "Username": "<your_smtp_username>",
        "Password": "<your_smtp_password>",
        "Disabled": true,
        "UseAuthentication": true,
        "CC": "<your_cc_email>",
        "UseCC": false
    },
    "EasyCaching": {
        "InMemory": {
            "MaxRdSecond": 120,
            "EnableLogging": false,
            "LockMs": 5000,
            "SleepMs": 300,
            "DBConfig":{
                "SizeLimit": 10000,
                "ExpirationScanFrequency": 60,
                "EnableReadDeepClone": true,
                "EnableWriteDeepClone": false
            }
        },
        "CacheTimeInMinutes": 20
    },
    "OpenAi": {
        "Endpoint": "https://localhost:7769",
        "GeneratedKeysPath": "<your_path>/keys.txt"
    },
    "Authentication": {
        "Facebook": {
            "AppId": "",
            "AppSecret": "",
            "CallbackPath": "admin/signin-facebook"
        },
        "Twitter": {
            "ClientKey": "",
            "ClientSecret": "",
            "APIKey": "",
            "APIKeySecret": "",
            "BearerToken": "",
            "AccessToken": "",
            "AccessTokenSecret": ""
        },
        "Google": {
            "ClientId": "",
            "ClientSecret": ""
        },
        "Microsoft": {
            "ClientID": "",
            "SecretID": ""
        }
    }
}
