@using global::Shared.Extensions
@inject IConfiguration Configuration

<div style="width: 100%; text-align: right; font-size: 2.2vw;">@TotalBudget.FormatNumber(2)@* @LocalizationService.StringFromResource("Statistics-Kr")*@</div>

@code {
    [Parameter] public decimal TotalBudget { get; set; }

    protected override void OnParametersSet()
    {
        if (Configuration.GetValue<bool>("DemoMode"))
        {
            TotalBudget = new Bogus.Faker().Random.Decimal(100000, 900000);
            StateHasChanged();
        }
    }
}