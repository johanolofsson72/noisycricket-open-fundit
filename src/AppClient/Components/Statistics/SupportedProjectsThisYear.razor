
@inject IConfiguration Configuration

<div style="width: 100%; text-align: right; font-size: 2.2vw;">@TotalBudget.ToString() @LocalizationService.StringFromResource("Statistics-St")</div>

@code {
    [Parameter] public decimal TotalBudget { get; set; }

    protected override void OnParametersSet()
    {
        if (Configuration.GetValue<bool>("DemoMode"))
        {
            TotalBudget = new Bogus.Faker().Random.Int(1, 10);
        }
    }
}